{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/build/$1"
        },
        {
            "src": "/(.*)\\.(?:js|jsx|ts|tsx)",
            "headers": {
                "Content-Type": "application/javascript",
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/$1"
        },
        {
            "src": "/(.*)\\.css",
            "headers": {
                "Content-Type": "text/css",
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/$1"
        },
        {
            "src": "/assets/(.*)",
            "headers": {
                "cache-control": "public, max-age=31536000, immutable"
            },
            "dest": "/assets/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "headers": {
                "Cache-Control": "public, max-age=0, must-revalidate"
            },
            "dest": "/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "JWT_EXPIRE": "30d"
    },
    "build": {
        "env": {
            "VITE_APP_NAME": "JetSet App",
            "VITE_API_URL": "/api"
        }
    }
}